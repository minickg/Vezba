    <script>
        
        function myFunc() {

            var a = document.querySelector('#input_a');
            var b = document.querySelector('#input_b');

            let rez = ;
            var operacije = document.querySelector("#operacije");
            operacije.addEventListener('change', myFunc);


            let paragraf = document.querySelector('#paragraf');
            paragraf.innerText = rez;

        }
        function init() {
            var a = document.querySelector('#input_a');
            var b = document.querySelector('#input_b');
